{{#if updateProductForm}}
  <h4>Update {{product.model}} <br> {{product.price}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="model">Model</label>
        {{input value=product.model id="model" placeholder=product.model}}
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        {{input value=product.price id="price" placeholder=product.price}}
      </div>

      <div class="form-group">
        <label for="currency">Currency</label>
        {{input value=product.currency id="currency" placeholder=product.currency}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=product.image id="image" placeholder=product.image}}
      </div>

      <button {{action 'update' product}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateProductForm'}}>Update</button>
{{/if}}
